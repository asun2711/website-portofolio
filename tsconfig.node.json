{
  "extends": "./tsconfig.json",
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "cypress.config.ts",
    "playwright.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "src/**/*.spec.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["node"]
  }
}